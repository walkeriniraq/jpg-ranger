<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-id">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Jpg Ranger</a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse-id">
      <ul class="nav navbar-nav">
        {{#link-to 'recent' tagName="li"}}
          {{#link-to 'recent'}}Recent Photos{{/link-to}}
        {{/link-to}}
        {{#link-to 'tagless' tagName="li"}}
          {{#link-to 'tagless'}}Tagless{{/link-to}}
        {{/link-to}}
        {{#link-to 'smallest' tagName="li"}}
          {{#link-to 'smallest'}}Smallest{{/link-to}}
        {{/link-to}}
      </ul>
    </div>
  </div>
</div>
{{#if application.has_uploads_pending}}
  <div id="uploading_overlay">
    <span id="text">
      Uploading...
    </span>
  </div>
{{/if}}

<div class="navbar-spacer" style="height: 50px;"></div>

<div id="tag-bar" class="hidden-sm hidden-xs">
  <h3 style="color: #e6e57d; font-size: 150%">Click to view</h3>
  <div>
    {{#each person in application.master_people_list}}
      {{#link-to 'person' person class="person tag-label link-tag"}}
        {{person}}
      {{/link-to}}
    {{/each}}
  </div>
  <div>
    {{#each place in application.master_places_list}}
      {{#link-to 'place' place class="place tag-label link-tag"}}
        {{place}}
      {{/link-to}}
    {{/each}}
  </div>
  <div>
    {{#each tag in application.master_tags_list}}
      {{#link-to 'tag' tag class="tag tag-label link-tag"}}
        {{tag}}
      {{/link-to}}
    {{/each}}
  </div>
  <div>
    {{#each group in application.master_collection_list}}
      {{#link-to 'collection' group class="collection tag-label link-tag"}}
        {{group}}
      {{/link-to}}
    {{/each}}
  </div>
</div>
