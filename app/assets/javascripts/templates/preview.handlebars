<div class="row">
  <div class="col-md-3">
    <h4>Click to add</h4>
    <h5>People</h5>
    {{#each person in master_people_list}}
      <span class="person label label-primary" {{action 'add_person' this person }}>
        {{person}}
      </span>
    {{/each}}
    <h5 style="margin-top: 2em;">Places</h5>
    {{#each place in master_places_list}}
      <span class="place label label-primary" {{action 'add_place' this place }}>
        {{place}}
      </span>
    {{/each}}
    <h5 style="margin-top: 2em;">Tags</h5>
    {{#each tag in master_tags_list}}
      <span class="tag label label-primary" {{action 'add_tag' this tag }}>
        {{tag}}
      </span>
    {{/each}}
  </div>
  <div class="col-md-9">
    <img class="photo-thumbnail" {{bind-attr src=medium_photo_path}}>

    <div class="photo-info" style="max-width: 1000px;">
      <div class="pull-right">{{uploader}}</div>
      <div>{{original_filename}}</div>
      <div>{{formatted_photo_time}}</div>
      <div class="pull-right">{{file_hash}}</div>
      <div title="extra exif data goes here">{{resolution}}</div>
      <div >
        {{#each person in people}}
          <span class="person label" {{action 'remove_person' this person }}>
            {{person}}
          </span>
        {{/each}}
        {{#each place in places}}
          <span class="place label" {{action 'remove_place' this place }}>
            {{place}}
          </span>
        {{/each}}
        {{#each tag in tags}}
          <span class="tag label" {{action 'remove_tag' this tag }}>
            {{tag}}
          </span>
        {{/each}}
      </div>
      <div style="padding-top: 20px;">
        <button class="btn person" {{action 'add_person' this}}>Add person</button>
        <button class="btn place" {{action 'add_place' this}}>Add place</button>
        <button class="btn tag" {{action 'add_tag' this}}>Add tag</button>
        <div class="pull-right">
          <button class="btn btn-success">Full Size</button>
          <button class="btn btn-warning">Delete</button>
        </div>
      </div>
    </div>
  </div>
</div>
