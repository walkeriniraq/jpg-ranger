{{partial 'nav_layout'}}

<div class="container nav-container" style="width: auto;">
  <div class="row">
    <div class="col-sm-9" style="text-align: center;">
      <h1>Untagged</h1>

      {{partial 'photo/paging_bar'}}

      {{#each photo in model}}
        {{selectable-photo photo=photo action='open_preview'}}
      {{/each}}

      {{partial 'photo/paging_bar'}}
    </div>

    <div class="col-sm-3">
      <h4>Click to add</h4>
      <h5>People</h5>
      {{#each person in application.master_people_list}}
        <span class="person tag-label add-tag" {{action 'add_person' person }}>
        <span class="glyphicon glyphicon-plus"></span>
          {{person}}
      </span>
      {{/each}}
      <h5 style="margin-top: 2em;">Places</h5>
      {{#each place in application.master_places_list}}
        <span class="place tag-label add-tag" {{action 'add_place' place }}>
        <span class="glyphicon glyphicon-plus"></span>
          {{place}}
      </span>
      {{/each}}
      <h5 style="margin-top: 2em;">Tags</h5>
      {{#each tag in application.master_tags_list}}
        <span class="tag tag-label add-tag" {{action 'add_tag' tag }}>
        <span class="glyphicon glyphicon-plus"></span>
          {{tag}}
      </span>
      {{/each}}
      <h5 style="margin-top: 2em;">Collections</h5>
      {{#each group in application.master_collection_list}}
        <span class="collection tag-label add-tag" {{action 'add_collection' group }}>
        <span class="glyphicon glyphicon-plus"></span>
          {{group}}
      </span>
      {{/each}}
      <div class="add-tags-buttons">
        <button class="btn person" {{action 'add_person' model}}>Add person</button>
        <button class="btn place" {{action 'add_place' model}}>Add place</button>
        <button class="btn tag" {{action 'add_tag' model}}>Add tag</button>
        <button class="btn collection" {{action 'add_collection' model}}>Add collection</button>
      </div>
    </div>
  </div>

</div>
