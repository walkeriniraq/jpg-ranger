<% photos.each_slice(4) do |photo_row| %>
  <div class="row" style="margin-top: 10px;">
    <% photo_row.each do |photo| %>
      <div class="col-md-3">
        <div class="photo img-thumbnail" data-filename="<%= photo.filename %>">
          <div style="text-align: center;">
            <a href="/home/medium_thumb/<%= photo.filename %>" title="<%= photo.original_filename %>" target="_blank">
              <img class="photo-thumbnail" src="/home/small_thumb/<%= photo.filename %>">
            </a>
          </div>
          <div><%= photo.photo_time.andand.strftime('%F') %></div>
          <div class="tag-holder" style="text-align: center">
            <% photo.tags.each do |tag| %>
              <a href="/collection/tag/<%= tag %>" class="tag label label-primary">
                <%= tag %>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
